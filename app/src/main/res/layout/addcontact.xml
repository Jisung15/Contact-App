<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="337dp"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/addTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:text="연락처 추가"
        android:textColor="#0A81D7"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/addProfileImage"
        android:layout_width="144dp"
        android:layout_height="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/profile1"
        app:layout_constraintTop_toBottomOf="@id/addTitleText" />

    <EditText
        android:id="@+id/addNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/addProfileImage" />

    <EditText
        android:id="@+id/addPhonNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호"
        android:inputType="number"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/addNameEditText" />

    <EditText
        android:id="@+id/addMailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/addPhonNumberEditText" />

    <EditText
        android:id="@+id/addEventEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이벤트"
        android:inputType="textEmailAddress"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/addMailEditText" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosans_bold"
        android:text="취소"
        android:textSize="20dp"
        android:includeFontPadding="false"
        android:backgroundTint="#0A81D7"
        app:layout_constraintTop_toBottomOf="@id/addEventEditText" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/notosans_bold"
        android:text="등록"
        android:textSize="20dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/finishButton"
        app:layout_constraintStart_toEndOf="@id/finishButton"
        app:layout_constraintTop_toTopOf="@id/finishButton"
        android:backgroundTint="#0A81D7" />
</androidx.constraintlayout.widget.ConstraintLayout>
